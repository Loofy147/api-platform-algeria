# Application Configuration
APP_NAME="API Platform - Business OS for Algeria"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/api_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Localization
SUPPORTED_LANGUAGES=["en", "ar", "fr"]
DEFAULT_LANGUAGE=en

# Payment Integration
BARIDI_MOB_API_KEY=your-api-key
BARIDI_MOB_MERCHANT_ID=your-merchant-id

# Notification Services
SMS_PROVIDER=twilio
EMAIL_PROVIDER=sendgrid
WHATSAPP_PROVIDER=twilio

# Storage
STORAGE_TYPE=s3
S3_BUCKET_NAME=api-platform-storage
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
